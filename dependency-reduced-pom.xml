<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>io.freeze-dolphin</groupId>
  <artifactId>ultimate-generators</artifactId>
  <name>UltimateGenerators</name>
  <version>1.0.5</version>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>${project.basedir}/src/main/resources</directory>
      </resource>
    </resources>
    <finalName>${project.name} v${project.version}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>3.2.0</version>
        <configuration>
          <escapeString>\</escapeString>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>org.dom4j:dom4j</artifact>
                  <excludes>
                    <exclude>META-INF/*</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>taboolib</id>
      <url>https://ptms.ink:8081/repository/maven-public/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>ink.ptms.core</groupId>
      <artifactId>v11200</artifactId>
      <version>11200</version>
      <classifier>all</classifier>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>me.mrCookieSlime</groupId>
      <artifactId>Slimefun</artifactId>
      <version>4.1.15</version>
      <scope>system</scope>
      <systemPath>${pom.basedir}/lib/Slimefun-4.1.15-NOBUTS.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>me.mrCookieSlime</groupId>
      <artifactId>CS-CoreLib</artifactId>
      <version>1.5.18</version>
      <scope>system</scope>
      <systemPath>${pom.basedir}/lib/CS-CoreLib-1.5.18.jar</systemPath>
    </dependency>
  </dependencies>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>
</project>
